<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/report"
    tools:context=".ReportActivity">

    <RelativeLayout
        android:id="@+id/custom_toolbar_report"
        android:layout_width="match_parent"
        android:background="@color/teal_700"
        android:layout_height="?actionBarSize">
        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Report"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_balance_account"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/custom_toolbar_report"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_balanceTitle"
                    android:layout_alignParentLeft="true"
                    android:text="Balance By Account"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_currencyAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="RM"
                    android:textColor="@color/blue"
                    android:textSize="32dp"
                    android:layout_below="@+id/tv_balanceTitle"/>
                <TextView
                    android:id="@+id/tv_balanceAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:text="000"
                    android:textColor="@color/blue"
                    android:textSize="32dp"
                    android:layout_below="@+id/tv_balanceTitle"
                    android:layout_toRightOf="@id/tv_currencyAccount"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/card_view_balance_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:text="Cash Flow Table"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="5"
                    android:columnCount="3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:text="Quick Overview"
                        android:textAlignment="textEnd"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="Income"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="Expenses"
                        android:textColor="@color/red"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="Count"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_countIncome"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_countExpenses"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:textColor="@color/red"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="Average"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_averageIncome"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_averageExpenses"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:textColor="@color/red"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="Total"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_totalIncome"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_totalExpenses"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:textColor="@color/red"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="Cash Flow"
                        android:textColor="@color/black"
                        android:layout_columnSpan="2"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/tv_cashFlow"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:textAlignment="textEnd"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"/>

                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>